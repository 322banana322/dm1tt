@startuml

Class platform{
pos.X: double
speed: double
lenght: double
}

Class Brick{
endurance: int
length: double
height: double
pos.X: double
pos.Y: double
}

Class Ball{
radius: double
pos.X: double
pos.Y: double
speed: double
direction: double
}

Class User{
score: int
lives: int
}

platform <-> Brick
Brick <-> Ball
Ball <- User
@enduml
